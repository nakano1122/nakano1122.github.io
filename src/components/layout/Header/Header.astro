---
import { loadPersonalInfo } from '../../../functions/dataLoader';

const personalInfo = await loadPersonalInfo();
const path = Astro.url.pathname;
---

<header class="site-header">
	<div class="header-container">
		<a href="/" class="logo-link">
			<div class="logo">
				<span class="logo-text">{personalInfo.name}</span>
			</div>
		</a>
		
		<nav class="navigation">
			<a href="/" class={path === '/' ? 'nav-link active' : 'nav-link'}>ホーム</a>
			<a href="/development" class={path === '/development' ? 'nav-link active' : 'nav-link'}>アプリ開発</a>
			<a href="/research" class={path === '/research' ? 'nav-link active' : 'nav-link'}>研究</a>
			<a href="/internship" class={path === '/internship' ? 'nav-link active' : 'nav-link'}>インターンシップ</a>
		</nav>
	</div>
</header>

<style>
	.site-header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		background: var(--color-bg-header);
		backdrop-filter: blur(20px);
		border-bottom: 1px solid var(--color-border);
		transition: all 0.3s ease;
	}

	.header-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-xl);
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 80px;
	}

	.logo-link {
		text-decoration: none;
	}

	.logo-text {
		font-size: var(--font-size-lg);
		font-weight: var(--font-weight-bold);
		color: var(--color-text);
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.navigation {
		display: flex;
		gap: var(--spacing-lg);
	}

	.nav-link {
		color: var(--color-text-light);
		text-decoration: none;
		font-weight: var(--font-weight-medium);
		padding: var(--spacing-sm) var(--spacing-md);
		border-radius: var(--radius-md);
		transition: all 0.3s ease;
	}

	.nav-link:hover {
		color: var(--color-secondary-solid);
		background: var(--color-bg-tertiary);
	}

	.nav-link.active {
		color: var(--color-secondary-solid);
		background: var(--color-bg-card);
	}

	@media (max-width: 768px) {
		.header-container {
			padding: 0 var(--spacing-lg);
		}

		.navigation {
			display: none;
		}
	}
</style>