---
import PersonalInfoCard from './portfolio/PersonalInfoCard.astro';
import DevelopmentCard from './portfolio/DevelopmentCard.astro';
import ResearchCard from './portfolio/ResearchCard.astro';
import InternshipCard from './portfolio/InternshipCard.astro';
import { 
	loadMarkdownData, 
	parsePersonalInfo, 
	parseLastUpdated 
} from '../utils/data-extractors';

const markdownData = loadMarkdownData();
const personalData = parsePersonalInfo(markdownData.personalInfo);
const lastUpdated = parseLastUpdated(markdownData.lastUpdated);
---

<main class="portfolio-container">
	<!-- Hero Section -->
	<section class="hero-section">
		<div class="hero-content">
			<div class="avatar">
				<span class="avatar-initial">{personalData.name.charAt(0)}</span>
			</div>
			<div class="hero-text">
				<h1 class="hero-name">{personalData.name}</h1>
				<p class="hero-title">Software Engineer & Researcher</p>
				<p class="hero-affiliation">{personalData.affiliation} {personalData.grade}</p>
			</div>
		</div>
	</section>

	<!-- 4つの主要セクション（仕様書に従って別々のパーツで表示） -->
	<div class="content-grid">
		<PersonalInfoCard content={markdownData.personalInfo} />
		<a href="/development" class="card-link">
			<DevelopmentCard content={markdownData.developmentExperience} />
		</a>
		<a href="/research" class="card-link">
			<ResearchCard content={markdownData.researchHistory} />
		</a>
		<a href="/internship" class="card-link">
			<InternshipCard content={markdownData.internshipHistory} />
		</a>
	</div>

	<!-- Footer -->
	<footer class="portfolio-footer">
		<p class="last-updated">最終更新日: {lastUpdated}</p>
	</footer>
</main>

<style>
	.portfolio-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: var(--spacing-xl);
		font-family: 'Inter', 'Noto Sans JP', sans-serif;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	/* Hero Section */
	.hero-section {
		text-align: center;
		margin-bottom: var(--spacing-4xl);
		padding: var(--spacing-3xl) 0;
		position: relative;
	}

	.hero-content {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--spacing-xl);
	}

	.avatar {
		width: 64px;
		height: 64px;
		background: var(--color-primary);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-weight: 600;
		font-size: 1.5rem;
	}

	.hero-name {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-text);
		margin-bottom: var(--spacing-sm);
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.hero-title {
		font-size: 1.25rem;
		color: var(--color-primary-solid);
		font-weight: 500;
		margin-bottom: var(--spacing-sm);
	}

	.hero-affiliation {
		font-size: 1rem;
		color: var(--color-text-light);
	}


	/* Content Grid - 4つのパーツを2x2で表示 */
	.content-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-xl);
		flex: 1;
		align-content: start;
	}



	/* Card Link Styles */
	.card-link {
		text-decoration: none;
		color: inherit;
		display: block;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
	}

	.card-link:hover {
		transform: translateY(-2px) scale(1.02);
	}


	/* Footer */
	.portfolio-footer {
		margin-top: var(--spacing-2xl);
		padding-top: var(--spacing-lg);
		border-top: 1px solid var(--color-border);
		text-align: center;
	}

	.last-updated {
		font-size: 0.875rem;
		color: var(--color-text-lighter);
	}

	/* Responsive */
	@media (max-width: 768px) {
		.portfolio-container {
			padding: var(--spacing-lg);
		}

		.hero-name {
			font-size: 2rem;
		}

		.hero-title {
			font-size: 1.125rem;
		}

		.hero-affiliation {
			font-size: 0.875rem;
		}

		.content-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-lg);
		}

	}
</style>