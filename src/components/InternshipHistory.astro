	}

	.internship-item {
		display: flex;
		margin-bottom: var(--spacing-2xl);
		animation: slideUp 0.6s ease-out both;
	}

	.internship-item:last-child {
		margin-bottom: 0;
	}

	.timeline-connector {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-right: var(--spacing-xl);
		flex-shrink: 0;
	}

	.timeline-dot {
		width: 16px;
		height: 16px;
		border-radius: 50%;
		border: 4px solid var(--color-bg-card);
		box-shadow: var(--shadow-md);
		z-index: 2;
	}

