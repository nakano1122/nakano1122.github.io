const markdownData = loadMarkdownData();
const markdownContent = markdownData.internshipHistory;

// Markdown„ÅÆÂÜÖÂÆπ„Çí„Éë„Éº„Çπ„Åó„Å¶Ë°®Á§∫Áî®„Éá„Éº„Çø„Å´Â§âÊèõ
function parseMarkdownContent(content: string) {
	// „Ç§„É≥„Çø„Éº„É≥„Ç∑„ÉÉ„Éó„Å´„Å§„ÅÑ„Å¶„ÅÆ„Çª„ÇØ„Ç∑„Éß„É≥„ÇíÊäΩÂá∫
	let introDescription = '‰ºÅÊ•≠„ÅÆ„Ç®„É≥„Ç∏„Éã„Ç¢„ÉÅ„Éº„É†„Åß„ÄÅWeb „Ç¢„Éó„É™„Ç±„Éº„Ç∑„Éß„É≥ÈñãÁô∫„Çí„Åó„Å¶„ÅÑ„Åæ„Åô';
	if (content.includes('‰ºÅÊ•≠„ÅÆ„Ç®„É≥„Ç∏„Éã„Ç¢„ÉÅ„Éº„É†„Åß')) {
		const match = content.match(/‰ºÅÊ•≠„ÅÆ„Ç®„É≥„Ç∏„Éã„Ç¢„ÉÅ„Éº„É†„Åß[^#]+/);
		if (match) {
			introDescription = match[0].replace(/\n/g, ' ').trim();
		}
	}
	
	// „Ç§„É≥„Çø„Éº„É≥„Ç∑„ÉÉ„ÉóÊÉÖÂ†±„ÇíÂõ∫ÂÆö„ÅßË®≠ÂÆöÔºàÁ¢∫ÂÆü„Å´Ë°®Á§∫„Åô„Çã„Åü„ÇÅÔºâ
	const internships = [{
		company: '„Ç∑„ÉÉ„ÇØ„Çπ„ÉØ„É≥Ê†™Âºè‰ºöÁ§æ',
		period: '2024Âπ¥7Êúà - ÁèæÂú®',
		businessContent: [
			'Next.js„ÄÅDjango „Åß„ÅÆ Web „Ç¢„Éó„É™„Ç±„Éº„Ç∑„Éß„É≥ÈñãÁô∫',
			'„ÇØ„É≠„Éº„É©„ÅÆÂÆüË£Ö',
			'Backend Team „Åß„ÅÆ Software Engineer Intern'
		],
		status: 'ongoing'
	}];
	
	return { introDescription, internships };
}

const { introDescription, internships } = parseMarkdownContent(markdownContent);

const getStatusColor = (status: string) => {
	switch (status) {
		case 'ongoing': return 'var(--color-warning)';
		case 'completed': return 'var(--color-success)';
		default: return 'var(--color-text-light)';
	}
};

const getStatusIcon = (status: string) => {
	switch (status) {
		case 'ongoing': return '‚ö°';
		case 'completed': return '‚úÖ';
		default: return 'üíº';
	}
};
