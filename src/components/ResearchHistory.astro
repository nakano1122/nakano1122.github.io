// „Çª„ÇØ„Ç∑„Éß„É≥Âà•„Å´„Éë„Éº„Çπ
function parseResearchMarkdown(content: string) {
	const publications = [];
	let researchContent = '';
	
	// Áô∫Ë°®Ë´ñÊñá„Çª„ÇØ„Ç∑„Éß„É≥„Å®Á†îÁ©∂ÂÜÖÂÆπ„Çª„ÇØ„Ç∑„Éß„É≥„ÇíÊäΩÂá∫
	const sections = content.split('## ');
	
	sections.forEach(section => {
		if (section.includes('Áô∫Ë°®Ë´ñÊñá')) {
			const lines = section.split('\n').filter(line => line.trim().match(/^\d+\./));
			lines.forEach(line => {
				// Áï™Âè∑‰ªò„Åç„É™„Çπ„Éà„Åã„ÇâË´ñÊñáÊÉÖÂ†±„ÇíÊäΩÂá∫
				const match = line.match(/\d+\.\s*\*\*(.*?)\*\*\s*-?\s*(.*?)(?=\s*$|\s*-\s*)/);
				if (match) {
					const title = match[1].replace(/"/g, '');
					const details = match[2] || '';
					
					// ‰ºöË≠∞Âêç„Å®Ë≥û„ÇíÊäΩÂá∫
					let conference = details;
					let award = '';
					
					if (details.includes('Â≠¶Áîü„Éó„É¨„Çº„É≥„ÉÜ„Éº„Ç∑„Éß„É≥Ë≥û')) {
						award = 'Â≠¶Áîü„Éó„É¨„Çº„É≥„ÉÜ„Éº„Ç∑„Éß„É≥Ë≥û';
						conference = details.replace('Â≠¶Áîü„Éó„É¨„Çº„É≥„ÉÜ„Éº„Ç∑„Éß„É≥Ë≥û', '').trim();
					}
					
					publications.push({
						title,
						conference,
						date: "2025Âπ¥3Êúà", // „Éá„Éï„Ç©„É´„ÉàÂÄ§
						type: "conference",
						status: "published",
						description: award ? `ÂèóË≥û: ${award}` : undefined,
						authors: ["‰∏≠Èáé ÊöÅÁôª"]
					});
				}
			});
		} else if (section.includes('Á†îÁ©∂ÂÜÖÂÆπ')) {
			// Á†îÁ©∂ÂÜÖÂÆπ„Çª„ÇØ„Ç∑„Éß„É≥„ÅÆ„ÉÜ„Ç≠„Çπ„Éà„ÇíÊäΩÂá∫
			const lines = section.split('\n').filter(line => line.trim() && !line.startsWith('Á†îÁ©∂ÂÜÖÂÆπ'));
			researchContent = lines.join('\n').trim();
		}
	});
	
	return { publications, researchContent };
}

const { publications, researchContent } = parseResearchMarkdown(markdownContent);

const finalPublications = publications;

const getTypeColor = (type: string) => {
	switch (type) {
		case 'journal': return 'var(--color-primary-solid)';
		case 'conference': return 'var(--color-secondary-solid)';
		case 'report': return 'var(--color-accent-solid)';
		default: return 'var(--color-text-light)';
	}
};

const getTypeLabel = (type: string) => {
	switch (type) {
		case 'journal': return 'Â≠¶Ë°ìË™å';
		case 'conference': return 'Â≠¶‰ºöÁô∫Ë°®';
		case 'report': return 'ÊäÄË°ìÂ†±Âëä';
		default: return type;
	}
};

const getStatusIcon = (status: string) => {
	switch (status) {
		case 'published': return '‚úÖ';
		case 'accepted': return '‚è≥';
		case 'submitted': return 'üìù';
		default: return 'üìÑ';
	}
