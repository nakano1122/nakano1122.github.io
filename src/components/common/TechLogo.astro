---
interface Props {
	tech: string;
	showName?: boolean;
	size?: 'sm' | 'md' | 'lg';
}

const { tech, showName = false, size = 'md' } = Astro.props;
const sizeClass = `tech-logo-${size}`;

// development.mdの値をそのまま使用し、ローカル画像パスを生成
const imagePath = `/images/tech-logos/${tech}.svg`;
---

<div class={`tech-item ${sizeClass}`}>
	<img src={imagePath} alt={tech} class="tech-icon" />
	{showName && <span class="tech-name">{tech}</span>}
</div>

<style>
	.tech-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
		padding: var(--spacing-sm) var(--spacing-md);
		background: var(--color-bg);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-full);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}

	.tech-logo-sm {
		padding: var(--spacing-xs) var(--spacing-sm);
	}

	.tech-logo-sm .tech-icon {
		width: 24px;
		height: 24px;
	}

	.tech-logo-sm .tech-name {
		font-size: 0.875rem;
	}

	.tech-logo-md .tech-icon {
		width: 32px;
		height: 32px;
	}

	.tech-logo-md .tech-name {
		font-size: 1rem;
	}

	.tech-logo-lg {
		padding: var(--spacing-md) var(--spacing-lg);
	}

	.tech-logo-lg .tech-icon {
		width: 40px;
		height: 40px;
	}

	.tech-logo-lg .tech-name {
		font-size: 1.125rem;
	}

	.tech-icon {
		filter: drop-shadow(0 0 2px rgba(0, 0, 0, 0.3));
		transition: all 0.3s ease;
		object-fit: contain;
	}

	.tech-name {
		color: var(--color-text-light);
		font-weight: 500;
		white-space: nowrap;
	}

	.tech-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: var(--gradient-primary);
		transition: left 0.3s ease;
		z-index: -1;
	}

	.tech-item:hover {
		border-color: var(--color-primary-solid);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.tech-item:hover .tech-name {
		color: white;
	}

	.tech-item:hover::before {
		left: 0;
	}
</style>
