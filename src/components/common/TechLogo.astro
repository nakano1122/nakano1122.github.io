---
import { getTechIcon } from '../../utils/tech-logos';

interface Props {
	tech: string;
	showName?: boolean;
	size?: 'sm' | 'md' | 'lg';
}

const { tech, showName = true, size = 'md' } = Astro.props;
const iconClass = getTechIcon(tech);
const sizeClass = `tech-logo-${size}`;
---

<div class={`tech-item ${sizeClass}`}>
	<i class={`${iconClass} tech-icon`}></i>
	{showName && <span class="tech-name">{tech}</span>}
</div>

<style>
	.tech-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
		padding: var(--spacing-sm) var(--spacing-md);
		background: var(--color-bg);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-full);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}

	.tech-logo-sm {
		padding: var(--spacing-xs) var(--spacing-sm);
	}

	.tech-logo-sm .tech-icon {
		font-size: 14px;
	}

	.tech-logo-sm .tech-name {
		font-size: 0.75rem;
	}

	.tech-logo-md .tech-icon {
		font-size: 16px;
	}

	.tech-logo-md .tech-name {
		font-size: 0.875rem;
	}

	.tech-logo-lg {
		padding: var(--spacing-md) var(--spacing-lg);
	}

	.tech-logo-lg .tech-icon {
		font-size: 20px;
	}

	.tech-logo-lg .tech-name {
		font-size: 1rem;
	}

	.tech-icon {
		filter: drop-shadow(0 0 2px rgba(0, 0, 0, 0.3));
		transition: all 0.3s ease;
	}

	.tech-name {
		color: var(--color-text-light);
		font-weight: 500;
		white-space: nowrap;
	}

	.tech-item::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: var(--gradient-primary);
		transition: left 0.3s ease;
		z-index: -1;
	}

	.tech-item:hover {
		border-color: var(--color-primary-solid);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.tech-item:hover .tech-name {
		color: white;
	}

	.tech-item:hover::before {
		left: 0;
	}
</style>