---
import EmailDisplay from './EmailDisplay.astro';

interface Props {
	id: string;
	type: 'github' | 'email' | 'atcoder';
	content: {
		url?: string;
		email?: string;
		text?: string;
	};
}

const { id, type, content } = Astro.props;

// SVGアイコンの定義
const icons = {
	github: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
		<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.430.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
	</svg>`,
	email: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
		<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
		<polyline points="22,6 12,13 2,6"></polyline>
	</svg>`,
	atcoder: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
		<polyline points="16 18 22 12 16 6"></polyline>
		<polyline points="8 6 2 12 8 18"></polyline>
	</svg>`
};
---

<div class={`tooltip-container ${type}-container`}>
	<button type="button" class={`social-link ${type}-button`} id={`${id}-button`} data-tooltip-type={type}>
		<Fragment set:html={icons[type]} />
	</button>
	<div class={`tooltip ${type}-tooltip`} id={`${id}-tooltip`} data-tooltip-id={id}>
		<div class="tooltip-arrow"></div>
		{type === 'email' ? (
			<EmailDisplay email={content.email || ''} class="email-address" />
		) : (
			<a href={content.url} target="_blank" rel="noopener noreferrer" class={`${type}-link tooltip-link`}>
				{content.text || `${type.charAt(0).toUpperCase() + type.slice(1)} Profile`}
			</a>
		)}
	</div>
</div>

<style>
	.tooltip-container {
		position: relative;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 48px;
		height: 48px;
		background: var(--color-bg-secondary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		color: var(--color-text);
		text-decoration: none;
		transition: all 0.3s ease;
		cursor: pointer;
		padding: 0;
	}

	.email-button {
		border: none;
	}

	.social-link :global(svg) {
		width: 28px;
		height: 28px;
	}

	.social-link:hover {
		border-color: var(--color-primary-solid);
		background: var(--color-primary-solid);
		color: #ffffff;
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.tooltip {
		position: absolute;
		bottom: calc(100% + 12px);
		left: 50%;
		transform: translateX(-50%);
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		padding: var(--spacing-md) var(--spacing-lg);
		box-shadow: var(--shadow-lg);
		white-space: nowrap;
		opacity: 0;
		visibility: hidden;
		transition: all 0.3s ease;
		z-index: 999;
	}

	.tooltip.show {
		opacity: 1;
		visibility: visible;
	}

	.tooltip-arrow {
		position: absolute;
		bottom: -6px;
		left: 50%;
		transform: translateX(-50%);
		width: 12px;
		height: 12px;
		background: var(--color-bg-card);
		border-right: 1px solid var(--color-border);
		border-bottom: 1px solid var(--color-border);
		rotate: 45deg;
	}

	.tooltip :global(.email-address) {
		font-size: var(--font-size-sm);
		color: var(--color-text);
		margin: 0;
		font-weight: var(--font-weight-medium);
	}

	.tooltip-link {
		font-size: var(--font-size-sm);
		color: var(--color-text);
		text-decoration: none;
		font-weight: var(--font-weight-medium);
		transition: color 0.3s ease;
	}

	.tooltip-link:hover {
		color: var(--color-primary-solid);
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const tooltipButtons = document.querySelectorAll('[data-tooltip-type]');
		const tooltips = document.querySelectorAll('[data-tooltip-id]');

		tooltipButtons.forEach((button) => {
			const buttonEl = button as HTMLElement;
			const tooltipId = buttonEl.id.replace('-button', '');
			const tooltip = document.getElementById(`${tooltipId}-tooltip`);

			if (tooltip) {
				// ボタンをクリックしたときに吹き出しを表示/非表示
				buttonEl.addEventListener('click', (e) => {
					e.stopPropagation();
					tooltip.classList.toggle('show');

					// 他の吹き出しを閉じる
					tooltips.forEach((otherTooltip) => {
						if (otherTooltip !== tooltip) {
							otherTooltip.classList.remove('show');
						}
					});
				});

				// 吹き出し内をクリックしても閉じないようにする
				tooltip.addEventListener('click', (e) => {
					e.stopPropagation();
				});
			}
		});

		// ドキュメント全体のクリックで吹き出しを閉じる
		document.addEventListener('click', () => {
			tooltips.forEach((tooltip) => {
				tooltip.classList.remove('show');
			});
		});
	});
</script>
