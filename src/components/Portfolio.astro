</main>

<style>
	.portfolio-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-xl);
	}

	.hero-section {
		text-align: center;
		padding: var(--spacing-6xl) 0 var(--spacing-4xl);
	}

	.hero-name {
		font-size: var(--font-size-5xl);
		font-weight: var(--font-weight-bold);
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		margin-bottom: var(--spacing-lg);
	}

	.hero-affiliation {
		margin-bottom: var(--spacing-xl);
	}

	.university, .faculty {
		font-size: var(--font-size-lg);
		color: var(--color-text);
		margin-bottom: var(--spacing-xs);
	}

	.lab-link {
		color: var(--color-secondary-solid);
		text-decoration: none;
		font-weight: var(--font-weight-semibold);
		transition: all 0.3s ease;
	}

	.lab-link:hover {
		text-shadow: var(--shadow-neon-cyan);
	}

	.hero-contacts {
		display: flex;
		justify-content: center;
		gap: var(--spacing-lg);
	}

	.contact-link {
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
		padding: var(--spacing-sm) var(--spacing-lg);
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		color: var(--color-text);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.contact-link:hover {
		border-color: var(--color-secondary-solid);
		transform: translateY(-2px);
		box-shadow: var(--shadow-neon-cyan);
	}

	.content-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-2xl);
		margin: var(--spacing-6xl) 0;
	}

	.info-card,
	.clickable-card {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-xl);
		padding: var(--spacing-xl);
		transition: all 0.3s ease;
		position: relative;
		backdrop-filter: blur(10px);
	}

	.clickable-card {
		text-decoration: none;
		color: inherit;
	}

	.clickable-card:hover {
		transform: translateY(-4px);
		border-color: var(--color-secondary-solid);
		box-shadow: var(--shadow-neon-cyan);
	}

	.card-title {
		font-size: var(--font-size-xl);
		font-weight: var(--font-weight-bold);
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
	}

	.more-indicator {
		position: absolute;
		top: var(--spacing-lg);
		right: var(--spacing-lg);
		font-size: var(--font-size-xl);
		color: var(--color-text-lighter);
		transition: all 0.3s ease;
	}

	.clickable-card:hover .more-indicator {
		color: var(--color-secondary-solid);
		transform: translateX(4px);
	}

	.info-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-lg);
	}

	.info-item {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-xs);
	}

	.info-item.full-width {
		grid-column: 1 / -1;
	}

	.info-label {
		font-size: var(--font-size-sm);
		color: var(--color-text-light);
		font-weight: var(--font-weight-medium);
	}

	.info-value {
		color: var(--color-text);
		font-weight: var(--font-weight-semibold);
	}

	.qualification-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-sm);
	}

	.qualification-tag {
		background: var(--gradient-accent);
		color: #ffffff;
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-md);
		font-size: var(--font-size-xs);
		font-weight: var(--font-weight-semibold);
		text-shadow: 0 0 8px rgba(0, 0, 0, 0.7), 0 0 4px rgba(0, 0, 0, 0.9);
	}

	.section-preview {
		margin-bottom: var(--spacing-lg);
	}

	.preview-title {
		font-size: var(--font-size-sm);
		font-weight: var(--font-weight-semibold);
		color: var(--color-text-light);
		margin-bottom: var(--spacing-sm);
	}

	.awards-list {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
	}

	.award-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.award-name {
		font-weight: var(--font-weight-semibold);
		color: var(--color-text);
		font-size: var(--font-size-sm);
	}

	.award-result {
		font-size: var(--font-size-xs);
		color: #ffffff;
		background: linear-gradient(135deg, #047857 0%, #0d9488 100%);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-sm);
		font-weight: var(--font-weight-semibold);
		text-shadow: 0 0 8px rgba(0, 0, 0, 0.7), 0 0 4px rgba(0, 0, 0, 0.9);
	}

	.tech-logos {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-sm);
	}

	.projects-list {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-sm);
	}

	.project-name {
		background: var(--gradient-primary);
		color: #ffffff;
		padding: var(--spacing-xs) var(--spacing-md);
		border-radius: var(--radius-lg);
		font-size: var(--font-size-xs);
		font-weight: var(--font-weight-semibold);
		text-shadow: 0 0 8px rgba(0, 0, 0, 0.8), 0 0 4px rgba(0, 0, 0, 1);
	}

	.keywords-list {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-sm);
	}

	.keyword-tag {
		background: var(--gradient-secondary);
		color: #ffffff;
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-full);
		font-size: var(--font-size-xs);
		font-weight: var(--font-weight-semibold);
		text-shadow: 0 0 8px rgba(0, 0, 0, 0.7), 0 0 4px rgba(0, 0, 0, 0.9);
	}

	.publications-list {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}

	.publication-item {
		border-left: 3px solid var(--color-secondary-solid);
		padding-left: var(--spacing-md);
	}

	.publication-title {
		font-weight: var(--font-weight-semibold);
		color: var(--color-text);
		font-size: var(--font-size-sm);
		margin-bottom: var(--spacing-xs);
		line-height: var(--line-height-snug);
	}

	.publication-authors {
		font-size: var(--font-size-xs);
		color: var(--color-text-light);
	}

	.internships-list {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}

	.internship-item {
		padding: var(--spacing-md);
		background: var(--color-bg-tertiary);
		border-radius: var(--radius-md);
	}

	.internship-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: var(--spacing-xs);
	}

	.company-name {
		font-weight: var(--font-weight-semibold);
		color: var(--color-text);
	}

	.internship-period {
		font-size: var(--font-size-xs);
		background: var(--gradient-secondary);
		color: #ffffff;
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-sm);
		font-weight: var(--font-weight-semibold);
		text-shadow: 0 0 8px rgba(0, 0, 0, 0.7), 0 0 4px rgba(0, 0, 0, 0.9);
	}

	.internship-role {
		font-size: var(--font-size-sm);
		color: var(--color-text-light);
	}

	@media (max-width: 1024px) {
		.content-grid {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 768px) {
		.hero-name {
			font-size: var(--font-size-4xl);
		}

		.hero-contacts {
			flex-direction: column;
		}

		.info-grid {
			grid-template-columns: 1fr;
		}
	}
</style>