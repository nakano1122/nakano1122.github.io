---
import { parseDevelopmentExperience } from '../../utils/data-extractors';
import TechLogo from '../common/TechLogo.astro';

export interface Props {
	content: string;
}

const { content } = Astro.props;
const { awards, technologies } = parseDevelopmentExperience(content);
---

<section class="development-card">
	<h2 class="card-title">アプリ開発経験</h2>
	<div class="development-content">
		<div class="subsection">
			<h3 class="subsection-title">ハッカソン受賞歴</h3>
			<div class="awards-list" id="home-awards-list">
				{awards.slice(0, 2).map((award, index) => (
					<div class="award-item" style={`animation-delay: ${index * 0.1}s`}>
						<span class="award-title">{award.title}</span>
						<span class="award-date">{award.date}</span>
					</div>
				))}
				{awards.slice(2).map((award, index) => (
					<div class="award-item hidden-award" style={`animation-delay: ${(index + 2) * 0.1}s`}>
						<span class="award-title">{award.title}</span>
						<span class="award-date">{award.date}</span>
					</div>
				))}
			</div>
			{awards.length > 2 && (
				<div class="show-more-container">
					<span class="show-more-link" id="home-show-more-btn">
						<span class="show-more-text">もっと見る (+{awards.length - 2})</span>
						<span class="show-more-icon">→</span>
					</span>
				</div>
			)}
		</div>
		<div class="subsection">
			<h3 class="subsection-title">技術スタック</h3>
			<div class="tech-list">
				{technologies.flatMap(category => 
					category.items.map((tech) => (
						<TechLogo tech={tech} size="sm" />
					))
				)}
			</div>
		</div>
		<div class="subsection">
			<h3 class="subsection-title">個人開発</h3>
			<p class="coming-soon">Coming Soon...</p>
		</div>
	</div>
</section>

<style>
	.development-card {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		padding: var(--spacing-xl);
		box-shadow: var(--shadow-sm);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}

	.development-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: var(--gradient-primary);
		opacity: 0.6;
	}

	.development-card:hover {
		transform: translateY(-4px) scale(1.02);
		box-shadow: var(--shadow-dark-lg), var(--shadow-glow);
		border-color: var(--color-primary-solid);
	}

	.card-title {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		position: relative;
		padding-left: var(--spacing-md);
	}

	.card-title::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 3px;
		height: 16px;
		background: var(--color-primary);
		border-radius: 2px;
	}

	.subsection {
		margin-bottom: var(--spacing-md);
	}

	.subsection:last-child {
		margin-bottom: 0;
	}

	.subsection-title {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-md);
		position: relative;
		padding-left: var(--spacing-lg);
	}

	.subsection-title::before {
		content: '●';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		color: var(--color-primary-solid);
		font-size: 0.75rem;
	}

	.awards-list {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
	}

	.award-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: var(--spacing-sm);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-sm);
		border: 1px solid var(--color-border);
	}

	.award-title {
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--color-text);
	}

	.award-date {
		font-size: 0.75rem;
		color: var(--color-text-lighter);
	}

	.tech-list {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-sm);
	}

	.coming-soon {
		color: var(--color-text-lighter);
		font-style: italic;
		font-size: 0.875rem;
	}

	/* Show More Button Styles */
	.show-more-container {
		margin-top: var(--spacing-sm);
		text-align: right;
	}

	.show-more-link {
		display: inline-flex;
		align-items: center;
		gap: var(--spacing-xs);
		color: var(--color-text-light);
		font-size: 0.75rem;
		font-weight: 500;
		cursor: pointer;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		text-decoration: none;
	}

	.show-more-link:hover {
		color: var(--color-primary-solid);
	}

	.show-more-icon {
		transition: transform 0.3s ease;
		font-size: 0.7rem;
	}

	.show-more-link.expanded .show-more-icon {
		transform: rotate(90deg);
	}

	.hidden-award {
		display: none;
	}

	.hidden-award.show {
		display: flex;
		animation: slideInUp 0.4s ease-out;
	}

	@keyframes slideInUp {
		from {
			opacity: 0;
			transform: translateY(15px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.award-item {
			flex-direction: column;
			align-items: flex-start;
			gap: var(--spacing-xs);
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const showMoreBtn = document.getElementById('home-show-more-btn');
		const hiddenAwards = document.querySelectorAll('#home-awards-list .hidden-award');
		let isExpanded = false;

		if (showMoreBtn) {
			const totalAwards = document.querySelectorAll('#home-awards-list .award-item').length;
			const hiddenCount = totalAwards - 2;
			const originalText = `もっと見る (+${hiddenCount})`;
			
			showMoreBtn.addEventListener('click', () => {
				if (!isExpanded) {
					// Show hidden awards
					hiddenAwards.forEach((award, index) => {
						setTimeout(() => {
							award.classList.add('show');
						}, index * 80);
					});
					
					// Update link
					showMoreBtn.classList.add('expanded');
					showMoreBtn.querySelector('.show-more-text').textContent = '閉じる';
					isExpanded = true;
				} else {
					// Hide awards
					hiddenAwards.forEach(award => {
						award.classList.remove('show');
					});
					
					// Update link
					showMoreBtn.classList.remove('expanded');
					showMoreBtn.querySelector('.show-more-text').textContent = originalText;
					isExpanded = false;
				}
			});
		}
	});
</script>