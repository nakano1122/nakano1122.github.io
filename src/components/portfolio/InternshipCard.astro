---
import { parseInternshipHistory } from '../../utils/data-extractors';

export interface Props {
	content: string;
}

const { content } = Astro.props;
const internships = parseInternshipHistory(content);
---

<section class="internship-card">
	<h2 class="card-title">インターン歴</h2>
	<div class="internship-content">
		<div class="subsection">
			{internships.length > 0 ? (
				<div class="internships-list">
					{internships.map((internship) => (
						<div class="internship-item">
							<span class="internship-company">{internship.company}</span>
							<span class="internship-period">{internship.period}</span>
						</div>
					))}
				</div>
			) : (
				<div class="internship-summary">
					<div class="company-count">
						<span class="count-value">1</span>
						<span class="count-label">社</span>
					</div>
				</div>
			)}
		</div>
	</div>
</section>

<style>
	.internship-card {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		padding: var(--spacing-xl);
		box-shadow: var(--shadow-sm);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}

	.internship-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: var(--gradient-primary);
		opacity: 0.6;
	}

	.internship-card:hover {
		transform: translateY(-4px) scale(1.02);
		box-shadow: var(--shadow-dark-lg), var(--shadow-glow);
		border-color: var(--color-primary-solid);
	}

	.card-title {
		font-size: 1.125rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		position: relative;
		padding-left: var(--spacing-md);
	}

	.card-title::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 3px;
		height: 16px;
		background: var(--color-primary);
		border-radius: 2px;
	}

	.subsection {
		margin-bottom: var(--spacing-lg);
	}

	.subsection:last-child {
		margin-bottom: 0;
	}

	.internship-summary {
		text-align: center;
	}

	.company-count {
		display: flex;
		align-items: baseline;
		justify-content: center;
		gap: var(--spacing-xs);
		margin-bottom: var(--spacing-md);
	}

	.count-value {
		font-size: 2rem;
		font-weight: 700;
		color: var(--color-primary-solid);
	}

	.count-label {
		font-size: 0.875rem;
		color: var(--color-text-light);
	}

	.internships-list {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
		margin-bottom: var(--spacing-md);
	}

	.internship-item {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: var(--spacing-sm);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-sm);
		border: 1px solid var(--color-border);
	}

	.internship-company {
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--color-text);
	}

	.internship-period {
		font-size: 0.75rem;
		color: var(--color-text-lighter);
	}

	.internship-note {
		font-size: 0.875rem;
		color: var(--color-text-lighter);
	}

	@media (max-width: 768px) {
		.count-value {
			font-size: 1.5rem;
		}

		.count-label {
			font-size: 0.75rem;
		}
	}
</style>