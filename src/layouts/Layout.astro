---
import Header from '../components/Header.astro';

export interface Props {
	title?: string;
	showHeader?: boolean;
}

const { title = "中野太郎 - Portfolio", showHeader = true } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="中野太郎のポートフォリオサイト - ソフトウェアエンジニア、研究者" />
		<meta name="keywords" content="エンジニア,ソフトウェア開発,機械学習,フロントエンド,バックエンド" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Noto+Sans+JP:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		{showHeader && <Header />}
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* Revolutionary Dark Color System */
		--color-primary: linear-gradient(135deg, #8b7cf6 0%, #a855f7 100%);
		--color-primary-solid: #8b7cf6;
		--color-primary-dark: #7c3aed;
		--color-secondary: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
		--color-secondary-solid: #06b6d4;
		--color-accent: linear-gradient(135deg, #10b981 0%, #059669 100%);
		--color-accent-solid: #10b981;
		
		/* Dark Mode Text Colors */
		--color-text: #f8fafc;
		--color-text-light: #cbd5e0;
		--color-text-lighter: #94a3b8;
		--color-text-accent: #a78bfa;
		
		/* Dark Background System */
		--color-bg: #0f0f1a;
		--color-bg-secondary: #1a1b2e;
		--color-bg-tertiary: #16213e;
		--color-bg-card: rgba(26, 27, 46, 0.8);
		--color-bg-card-hover: rgba(26, 27, 46, 0.95);
		--color-bg-glass: rgba(15, 15, 26, 0.4);
		
		/* Dark Borders & Elements */
		--color-border: rgba(148, 163, 184, 0.2);
		--color-border-light: rgba(148, 163, 184, 0.1);
		--color-success: #22c55e;
		--color-warning: #f59e0b;
		
		/* Advanced Shadows */
		--shadow-xs: 0 0 0 1px rgba(0, 0, 0, 0.05);
		--shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
		--shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
		--shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
		--shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
		--shadow-2xl: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
		--shadow-inner: inset 0 2px 4px 0 rgba(0, 0, 0, 0.06);
		--shadow-glow: 0 0 20px rgba(139, 124, 246, 0.4);
		--shadow-glow-hover: 0 0 30px rgba(139, 124, 246, 0.6);
		--shadow-glow-purple: 0 0 25px rgba(168, 85, 247, 0.5);
		--shadow-glow-cyan: 0 0 25px rgba(6, 182, 212, 0.5);
		--shadow-dark: 0 4px 20px rgba(0, 0, 0, 0.3);
		--shadow-dark-lg: 0 10px 40px rgba(0, 0, 0, 0.4);
		
		/* Premium Dark Gradients */
		--gradient-primary: linear-gradient(135deg, #8b7cf6 0%, #a855f7 100%);
		--gradient-secondary: linear-gradient(135deg, #06b6d4 0%, #3b82f6 100%);
		--gradient-accent: linear-gradient(135deg, #10b981 0%, #059669 100%);
		--gradient-warm: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
		--gradient-cool: linear-gradient(135deg, #06b6d4 0%, #0284c7 100%);
		--gradient-dark: linear-gradient(135deg, #1a1b2e 0%, #0f0f1a 100%);
		--gradient-glass: linear-gradient(135deg, rgba(15, 15, 26, 0.4) 0%, rgba(15, 15, 26, 0.2) 100%);
		--gradient-purple: linear-gradient(135deg, #8b7cf6 0%, #d946ef 100%);
		--gradient-cyber: linear-gradient(135deg, #06ffa5 0%, #0080ff 100%);
		
		/* Advanced Spacing System */
		--spacing-xs: 0.25rem;
		--spacing-sm: 0.5rem;
		--spacing-md: 0.75rem;
		--spacing-lg: 1rem;
		--spacing-xl: 1.25rem;
		--spacing-2xl: 1.5rem;
		--spacing-3xl: 2rem;
		--spacing-4xl: 2.5rem;
		--spacing-5xl: 3rem;
		--spacing-6xl: 4rem;
		--spacing-7xl: 5rem;
		--spacing-8xl: 6rem;
		
		/* Modern Border Radius */
		--radius-xs: 0.125rem;
		--radius-sm: 0.25rem;
		--radius-md: 0.375rem;
		--radius-lg: 0.5rem;
		--radius-xl: 0.75rem;
		--radius-2xl: 1rem;
		--radius-3xl: 1.5rem;
		--radius-full: 9999px;
		
		/* Typography Scale */
		--font-size-xs: 0.75rem;
		--font-size-sm: 0.875rem;
		--font-size-base: 1rem;
		--font-size-lg: 1.125rem;
		--font-size-xl: 1.25rem;
		--font-size-2xl: 1.5rem;
		--font-size-3xl: 1.875rem;
		--font-size-4xl: 2.25rem;
		--font-size-5xl: 3rem;
		--font-size-6xl: 3.75rem;
		--font-size-7xl: 4.5rem;
		--font-size-8xl: 6rem;
		--font-size-9xl: 8rem;
		
		/* Line Heights */
		--line-height-none: 1;
		--line-height-tight: 1.25;
		--line-height-snug: 1.375;
		--line-height-normal: 1.5;
		--line-height-relaxed: 1.625;
		--line-height-loose: 2;
		
		/* Font Weights */
		--font-weight-thin: 100;
		--font-weight-extralight: 200;
		--font-weight-light: 300;
		--font-weight-normal: 400;
		--font-weight-medium: 500;
		--font-weight-semibold: 600;
		--font-weight-bold: 700;
		--font-weight-extrabold: 800;
		--font-weight-black: 900;
	}

	@media (prefers-color-scheme: dark) {
		:root {
			/* Dark Mode Revolution */
			--color-text: #f7fafc;
			--color-text-light: #cbd5e0;
			--color-text-lighter: #a0aec0;
			--color-text-accent: #90cdf4;
			
			--color-bg: #0f0f23;
			--color-bg-secondary: #1a1b3e;
			--color-bg-tertiary: #2d2e5f;
			--color-bg-card: rgba(26, 27, 62, 0.8);
			--color-bg-card-hover: rgba(26, 27, 62, 0.95);
			--color-bg-glass: rgba(26, 27, 62, 0.1);
			
			--color-border: rgba(113, 128, 150, 0.2);
			--color-border-light: rgba(113, 128, 150, 0.1);
			
			/* Dark Mode Gradients */
			--gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			--gradient-secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
			--gradient-accent: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
			--gradient-dark: linear-gradient(135deg, #1a1b3e 0%, #0f0f23 100%);
			--gradient-glass: linear-gradient(135deg, rgba(26, 27, 62, 0.1) 0%, rgba(26, 27, 62, 0.05) 100%);
		}
	}

	* {
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
		font-size: 16px;
	}

	body {
		margin: 0;
		padding: 0;
		font-family: 'Inter', 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		background: var(--color-bg);
		color: var(--color-text);
		line-height: var(--line-height-relaxed);
		font-weight: var(--font-weight-normal);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		overflow-x: hidden;
		scroll-behavior: smooth;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: 
			radial-gradient(circle at 20% 80%, rgba(139, 124, 246, 0.15) 0%, transparent 50%),
			radial-gradient(circle at 80% 20%, rgba(168, 85, 247, 0.12) 0%, transparent 50%),
			radial-gradient(circle at 40% 40%, rgba(6, 182, 212, 0.08) 0%, transparent 50%),
			radial-gradient(circle at 60% 70%, rgba(16, 185, 129, 0.06) 0%, transparent 50%);
		pointer-events: none;
		z-index: -1;
	}

	/* Dark Theme Grid Pattern */
	body::after {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: 
			linear-gradient(rgba(139, 124, 246, 0.03) 1px, transparent 1px),
			linear-gradient(90deg, rgba(139, 124, 246, 0.03) 1px, transparent 1px);
		background-size: 50px 50px;
		pointer-events: none;
		z-index: -1;
		opacity: 0.3;
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
		font-weight: 600;
		line-height: 1.2;
	}

	p {
		margin: 0;
	}

	a {
		color: var(--color-primary-solid);
		text-decoration: none;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	a:hover {
		color: var(--color-primary-dark);
		text-shadow: 0 0 8px rgba(139, 124, 246, 0.5);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-lg);
	}

	.section {
		padding: var(--spacing-3xl) 0;
	}

	.section-title {
		font-size: 1.875rem;
		font-weight: 600;
		text-align: left;
		margin-bottom: var(--spacing-lg);
		color: var(--color-text);
		position: relative;
		padding-left: var(--spacing-lg);
	}

	.section-title::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 4px;
		height: 24px;
		background: var(--color-primary);
		border-radius: 2px;
	}

	.card {
		background: var(--color-bg-card);
		border-radius: var(--radius-xl);
		padding: var(--spacing-2xl);
		box-shadow: var(--shadow-dark);
		border: 1px solid var(--color-border);
		backdrop-filter: blur(10px);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
	}

	.card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: var(--gradient-primary);
		opacity: 0.6;
	}

	.card:hover {
		transform: translateY(-4px) scale(1.02);
		box-shadow: var(--shadow-dark-lg), var(--shadow-glow);
		border-color: var(--color-primary-solid);
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: var(--spacing-sm) var(--spacing-lg);
		border-radius: var(--radius-md);
		font-weight: 500;
		text-decoration: none;
		transition: all 0.2s ease;
		cursor: pointer;
		border: none;
		font-size: 0.875rem;
	}

	.btn-primary {
		background: var(--gradient-primary);
		color: white;
		box-shadow: var(--shadow-glow);
		position: relative;
		overflow: hidden;
	}

	.btn-primary::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: var(--gradient-secondary);
		transition: left 0.3s ease;
	}

	.btn-primary:hover::before {
		left: 0;
	}

	.btn-primary:hover {
		transform: translateY(-2px) scale(1.05);
		box-shadow: var(--shadow-glow-hover);
	}

	.btn-outline {
		background: transparent;
		border: 2px solid var(--color-primary-solid);
		color: var(--color-primary-solid);
		position: relative;
		overflow: hidden;
	}

	.btn-outline::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: var(--gradient-primary);
		transition: left 0.3s ease;
		z-index: -1;
	}

	.btn-outline:hover::before {
		left: 0;
	}

	.btn-outline:hover {
		color: white;
		border-color: var(--color-primary-dark);
		box-shadow: var(--shadow-glow);
	}

	.text-gradient {
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.animate-fade-in {
		animation: fadeIn 0.6s ease-out;
	}

	.animate-slide-up {
		animation: slideUp 0.6s ease-out;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.container {
			padding: 0 var(--spacing-md);
		}

		.section {
			padding: var(--spacing-2xl) 0;
		}

		.section-title {
			font-size: 2rem;
			margin-bottom: var(--spacing-xl);
		}

		.card {
			padding: var(--spacing-lg);
		}
	}
</style>
