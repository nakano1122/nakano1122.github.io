---
import ThemeToggle from '../components/ui/ThemeToggle.astro';

export interface Props {
	title?: string;
}

const { title = "中野暁登 | Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<script is:inline>
			// FOUCを防ぐため、ページ読み込み前にテーマを適用
			(function() {
				const stored = localStorage.getItem('theme');
				const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
				const theme = stored || (prefersDark ? 'dark' : 'light');
				document.documentElement.setAttribute('data-theme', theme);
			})();
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="中野暁登（Akito Nakano）のポートフォリオサイト。静岡大学/筑波大学大学院で情報学を専攻。研究活動とソフトウェア開発に従事。" />
		<meta name="keywords" content="中野暁登,Akito Nakano,ポートフォリオ,エンジニア,研究者" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="中野暁登のポートフォリオサイト" />
		<meta property="og:type" content="website" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;1,400&family=Source+Sans+3:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		<ThemeToggle />
		<slot />
	</body>
</html>

<style is:global>
	:root,
	[data-theme='light'] {
		/* Color Palette - Light Editorial Theme with High Contrast */
		--color-bg: #faf9f7;
		--color-bg-elevated: #ffffff;
		--color-bg-card: #ffffff;
		--color-bg-card-hover: #f8f7f5;
		--color-bg-subtle: #f3f2f0;

		/* High contrast text colors */
		--color-text: #1a1a1a;
		--color-text-secondary: #3d3d3d;
		--color-text-muted: #666666;

		/* Warm accent */
		--color-accent: #c45d35;
		--color-accent-soft: rgba(196, 93, 53, 0.12);
		--color-accent-hover: #a84d2a;

		/* Cool highlight */
		--color-highlight: #1d4ed8;
		--color-highlight-soft: rgba(29, 78, 216, 0.1);

		/* Borders */
		--color-border: rgba(0, 0, 0, 0.1);
		--color-border-hover: rgba(0, 0, 0, 0.18);
	}

	[data-theme='dark'] {
		/* Color Palette - Dark Theme */
		--color-bg: #0f0f10;
		--color-bg-elevated: #1a1a1c;
		--color-bg-card: #1a1a1c;
		--color-bg-card-hover: #222224;
		--color-bg-subtle: #151516;

		/* High contrast text colors */
		--color-text: #f5f5f5;
		--color-text-secondary: #c8c8c8;
		--color-text-muted: #888888;

		/* Warm accent - slightly brighter for dark mode */
		--color-accent: #e07048;
		--color-accent-soft: rgba(224, 112, 72, 0.15);
		--color-accent-hover: #f08058;

		/* Cool highlight */
		--color-highlight: #5b8def;
		--color-highlight-soft: rgba(91, 141, 239, 0.15);

		/* Borders */
		--color-border: rgba(255, 255, 255, 0.1);
		--color-border-hover: rgba(255, 255, 255, 0.2);
	}

	/* Shared variables (not theme-dependent) */
	:root {
		/* Typography */
		--font-display: 'Playfair Display', serif;
		--font-body: 'Source Sans 3', 'Noto Sans JP', sans-serif;

		/* Spacing */
		--space-xs: 0.25rem;
		--space-sm: 0.5rem;
		--space-md: 1rem;
		--space-lg: 1.5rem;
		--space-xl: 2rem;
		--space-2xl: 3rem;
		--space-3xl: 4rem;
		--space-4xl: 6rem;

		/* Border Radius */
		--radius-sm: 6px;
		--radius-md: 10px;
		--radius-lg: 14px;
		--radius-xl: 20px;

		/* Transitions */
		--transition-fast: 150ms ease;
		--transition-base: 250ms ease;
		--transition-slow: 400ms cubic-bezier(0.4, 0, 0.2, 1);

		/* Shadows - Light mode defaults */
		--shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.04);
		--shadow-md: 0 4px 16px rgba(0, 0, 0, 0.08), 0 2px 6px rgba(0, 0, 0, 0.04);
		--shadow-lg: 0 12px 32px rgba(0, 0, 0, 0.1), 0 4px 12px rgba(0, 0, 0, 0.05);
	}

	/* Dark mode shadows */
	[data-theme='dark'] {
		--shadow-sm: 0 1px 3px rgba(0, 0, 0, 0.3), 0 1px 2px rgba(0, 0, 0, 0.2);
		--shadow-md: 0 4px 16px rgba(0, 0, 0, 0.4), 0 2px 6px rgba(0, 0, 0, 0.3);
		--shadow-lg: 0 12px 32px rgba(0, 0, 0, 0.5), 0 4px 12px rgba(0, 0, 0, 0.4);
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		scroll-behavior: smooth;
		font-size: 18px;
	}

	body {
		font-family: var(--font-body);
		background: var(--color-bg);
		color: var(--color-text);
		line-height: 1.75;
		min-height: 100vh;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		font-weight: 400;
		transition: background-color var(--transition-base), color var(--transition-base);
	}

	/* Subtle background accent - Light mode */
	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background:
			radial-gradient(ellipse 120% 60% at 50% -30%, rgba(196, 93, 53, 0.06) 0%, transparent 60%),
			radial-gradient(ellipse 80% 50% at 100% 100%, rgba(29, 78, 216, 0.04) 0%, transparent 50%);
		pointer-events: none;
		z-index: -1;
		transition: background var(--transition-base);
	}

	/* Subtle background accent - Dark mode */
	[data-theme='dark'] body::before {
		background:
			radial-gradient(ellipse 120% 60% at 50% -30%, rgba(224, 112, 72, 0.08) 0%, transparent 60%),
			radial-gradient(ellipse 80% 50% at 100% 100%, rgba(91, 141, 239, 0.06) 0%, transparent 50%);
	}

	h1, h2, h3, h4, h5, h6 {
		font-weight: 600;
		line-height: 1.35;
		color: var(--color-text);
	}

	p {
		line-height: 1.8;
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	::selection {
		background: var(--color-accent-soft);
		color: var(--color-text);
	}

	/* Scrollbar styling */
	::-webkit-scrollbar {
		width: 10px;
		height: 10px;
	}

	::-webkit-scrollbar-track {
		background: var(--color-bg-subtle);
	}

	::-webkit-scrollbar-thumb {
		background: var(--color-border-hover);
		border-radius: 5px;
		border: 2px solid var(--color-bg-subtle);
	}

	::-webkit-scrollbar-thumb:hover {
		background: var(--color-text-muted);
	}

	/* Section spacing - モバイルでコンパクトに */
	.section {
		padding: var(--space-4xl) 0;
	}

	@media (max-width: 768px) {
		html {
			font-size: 16px;
		}

		.section {
			padding: var(--space-2xl) 0;
		}
	}
</style>
