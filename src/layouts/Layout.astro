---
import Header from '../components/layout/Header/Header.astro';

export interface Props {
	title?: string;
	showHeader?: boolean;
}

const { title = "中野暁登 - Portfolio", showHeader = true } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="中野暁登のポートフォリオサイト - ソフトウェアエンジニア、研究者" />
		<meta name="keywords" content="エンジニア,ソフトウェア開発,機械学習,フロントエンド,バックエンド" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Noto+Sans+JP:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body>
		{showHeader && <Header />}
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* Happy Hues Palette 9 - Base Colors */
		--hh-background: #fffffe;
		--hh-headline: #0d0d0d;
		--hh-subheadline: #2a2a2a;
		--hh-card-bg: #eff0f3;
		--hh-card-heading: #0d0d0d;
		--hh-card-paragraph: #2a2a2a;
		--hh-highlight: #ff8e3c;
		--hh-secondary: #fffffe;
		--hh-tertiary: #d9376e;

		/* Background Colors */
		--color-bg: #fffffe;
		--color-bg-secondary: #f7f8fa;
		--color-bg-tertiary: #eff0f3;
		--color-bg-card: #eff0f3;
		--color-bg-card-hover: #e5e6ea;
		--color-bg-glass: rgba(239, 240, 243, 0.8);
		--color-bg-header: rgba(255, 255, 254, 0.95);

		/* Text Colors */
		--color-text: #0d0d0d;
		--color-text-light: #2a2a2a;
		--color-text-lighter: #6b6b6b;
		--color-text-accent: #ff8e3c;
		--color-text-secondary: #d9376e;

		/* Primary & Accent Colors */
		--color-primary-solid: #ff8e3c;
		--color-primary-dark: #e67a2a;
		--color-secondary-solid: #d9376e;
		--color-accent-solid: #ff8e3c;

		/* Gradients */
		--gradient-primary: linear-gradient(135deg, #ff8e3c 0%, #e67a2a 100%);
		--gradient-secondary: linear-gradient(135deg, #d9376e 0%, #b82959 100%);
		--gradient-accent: linear-gradient(135deg, #ff8e3c 0%, #d9376e 100%);
		--gradient-neon: linear-gradient(135deg, #ff8e3c 0%, #d9376e 100%);
		--gradient-subtle: linear-gradient(135deg, #eff0f3 0%, #f7f8fa 100%);

		/* Border Colors */
		--color-border: rgba(42, 42, 42, 0.15);
		--color-border-light: rgba(42, 42, 42, 0.08);
		--color-border-accent: rgba(255, 142, 60, 0.3);

		/* Status Colors */
		--color-success: #22c55e;
		--color-warning: #ff8e3c;
		--color-error: #d9376e;

		/* Shadows */
		--shadow-xs: 0 0 0 1px rgba(13, 13, 13, 0.05);
		--shadow-sm: 0 2px 4px 0 rgba(13, 13, 13, 0.1);
		--shadow-md: 0 4px 12px -2px rgba(13, 13, 13, 0.12), 0 2px 8px -2px rgba(13, 13, 13, 0.08);
		--shadow-lg: 0 8px 25px -5px rgba(13, 13, 13, 0.15), 0 4px 12px -4px rgba(13, 13, 13, 0.1);
		--shadow-xl: 0 16px 40px -8px rgba(13, 13, 13, 0.18), 0 8px 20px -6px rgba(13, 13, 13, 0.12);
		--shadow-2xl: 0 25px 60px -15px rgba(13, 13, 13, 0.25);
		--shadow-inner: inset 0 2px 8px 0 rgba(13, 13, 13, 0.06);
		--shadow-glow: 0 0 20px rgba(255, 142, 60, 0.3);
		--shadow-glow-secondary: 0 0 20px rgba(217, 55, 110, 0.3);
		--spacing-xs: 0.25rem;
		--spacing-sm: 0.5rem;
		--spacing-md: 0.75rem;
		--spacing-lg: 1rem;
		--spacing-xl: 1.25rem;
		--spacing-2xl: 1.5rem;
		--spacing-3xl: 2rem;
		--spacing-4xl: 2.5rem;
		--spacing-5xl: 3rem;
		--spacing-6xl: 4rem;
		--spacing-7xl: 5rem;
		--spacing-8xl: 6rem;
		--radius-xs: 0.125rem;
		--radius-sm: 0.25rem;
		--radius-md: 0.375rem;
		--radius-lg: 0.5rem;
		--radius-xl: 0.75rem;
		--radius-2xl: 1rem;
		--radius-3xl: 1.5rem;
		--radius-full: 9999px;
		--font-size-xs: 0.75rem;
		--font-size-sm: 0.875rem;
		--font-size-base: 1rem;
		--font-size-lg: 1.125rem;
		--font-size-xl: 1.25rem;
		--font-size-2xl: 1.5rem;
		--font-size-3xl: 1.875rem;
		--font-size-4xl: 2.25rem;
		--font-size-5xl: 3rem;
		--font-size-6xl: 3.75rem;
		--font-size-7xl: 4.5rem;
		--font-size-8xl: 6rem;
		--font-size-9xl: 8rem;
		--line-height-none: 1;
		--line-height-tight: 1.25;
		--line-height-snug: 1.375;
		--line-height-normal: 1.5;
		--line-height-relaxed: 1.625;
		--line-height-loose: 2;
		--font-weight-thin: 100;
		--font-weight-extralight: 200;
		--font-weight-light: 300;
		--font-weight-normal: 400;
		--font-weight-medium: 500;
		--font-weight-semibold: 600;
		--font-weight-bold: 700;
		--font-weight-extrabold: 800;
		--font-weight-black: 900;
	}


	* {
		box-sizing: border-box;
	}

	html {
		scroll-behavior: smooth;
		font-size: 16px;
		height: 100vh;
		overflow: hidden;
	}

	body {
		margin: 0;
		padding: 0;
		height: 100vh;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		font-family: 'Inter', 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		background: var(--color-bg);
		color: var(--color-text);
		line-height: var(--line-height-relaxed);
		font-weight: var(--font-weight-normal);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background:
			radial-gradient(circle at 15% 85%, rgba(255, 142, 60, 0.08) 0%, transparent 50%),
			radial-gradient(circle at 85% 15%, rgba(217, 55, 110, 0.06) 0%, transparent 50%);
		pointer-events: none;
		z-index: -1;
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
		font-weight: 600;
		line-height: 1.2;
	}

	p {
		margin: 0;
	}

	a {
		color: var(--color-primary-solid);
		text-decoration: none;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	a:hover {
		color: var(--color-secondary-solid);
		text-shadow: 0 0 12px rgba(6, 255, 165, 0.8);
		transform: translateY(-1px);
	}

	.container {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 var(--spacing-lg);
	}

	.section {
		padding: var(--spacing-3xl) 0;
	}

	.section-title {
		font-size: 1.875rem;
		font-weight: 600;
		text-align: left;
		margin-bottom: var(--spacing-lg);
		color: var(--color-text);
		position: relative;
		padding-left: var(--spacing-lg);
	}

	.section-title::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 4px;
		height: 24px;
		background: var(--color-primary);
		border-radius: 2px;
	}

	.card {
		background: var(--color-bg-card);
		border-radius: var(--radius-xl);
		padding: var(--spacing-2xl);
		box-shadow: var(--shadow-md);
		border: 1px solid var(--color-border);
		transition: all 0.3s ease;
	}

	.card:hover {
		transform: translateY(-4px);
		box-shadow: var(--shadow-xl);
		border-color: var(--color-border-accent);
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: var(--spacing-sm) var(--spacing-lg);
		border-radius: var(--radius-md);
		font-weight: 500;
		text-decoration: none;
		transition: all 0.2s ease;
		cursor: pointer;
		border: none;
		font-size: 0.875rem;
	}

	.btn-primary {
		background: var(--gradient-accent);
		color: #ffffff;
		box-shadow: var(--shadow-glow);
		font-weight: 600;
		transition: all 0.3s ease;
	}

	.btn-primary:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-glow-secondary), var(--shadow-lg);
		background: var(--gradient-primary);
	}

	.btn-outline {
		background: transparent;
		border: 2px solid var(--color-primary-solid);
		color: var(--color-primary-solid);
		transition: all 0.3s ease;
	}

	.btn-outline:hover {
		background: var(--color-primary-solid);
		color: #ffffff;
		border-color: var(--color-primary-dark);
		box-shadow: var(--shadow-glow);
	}

	.text-gradient {
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.animate-fade-in {
		animation: fadeIn 0.6s ease-out;
	}

	.animate-slide-up {
		animation: slideUp 0.6s ease-out;
	}

	@keyframes fadeIn {
		from {
			opacity: 0;
		}
		to {
			opacity: 1;
		}
	}

	@keyframes slideUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.container {
			padding: 0 var(--spacing-md);
		}

		.section {
			padding: var(--spacing-2xl) 0;
		}

		.section-title {
			font-size: 2rem;
			margin-bottom: var(--spacing-xl);
		}

		.card {
			padding: var(--spacing-lg);
		}
	}
</style>
