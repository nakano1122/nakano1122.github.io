<style>
	.page-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--spacing-xl);
		min-height: 100vh;
	}


	.page-header {
		margin-bottom: var(--spacing-3xl);
		text-align: center;
	}

	.page-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		position: relative;
	}

	.page-title::after {
		content: '';
		position: absolute;
		bottom: -8px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: var(--color-primary);
		border-radius: 2px;
	}

	.page-description {
		font-size: 1.125rem;
		color: var(--color-text-light);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.contact-content {
		margin-bottom: var(--spacing-3xl);
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-xl);
	}

	.contact-info-card {
		grid-column: 1 / -1;
	}

	.contact-info-card,
	.response-card,
	.availability-card,
	.tools-card {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		padding: var(--spacing-xl);
		box-shadow: var(--shadow-sm);
	}

	.card-title {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		position: relative;
		padding-left: var(--spacing-md);
	}

	.card-title::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 3px;
		height: 18px;
		background: var(--color-primary);
		border-radius: 2px;
	}

	/* Contact Methods */
	.contact-methods {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-xl);
	}

	.contact-method {
		display: flex;
		gap: var(--spacing-lg);
		padding: var(--spacing-lg);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-md);
	}

	.contact-icon {
		width: 48px;
		height: 48px;
		border-radius: var(--radius-md);
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.contact-icon svg {
		width: 24px;
		height: 24px;
	}

	.email-icon {
		background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
		color: white;
	}

	.github-icon {
		background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
		color: white;
	}

	.linkedin-icon {
		background: linear-gradient(135deg, #0077b5 0%, #0a66c2 100%);
		color: white;
	}

	.contact-details {
		flex: 1;
	}

	.contact-label {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-xs);
	}

	.contact-value {
		font-size: 1.125rem;
		color: var(--color-primary);
		text-decoration: none;
		font-weight: 500;
		display: block;
		margin-bottom: var(--spacing-xs);
	}

	.contact-value:hover {
		text-decoration: underline;
	}

	.contact-note {
		font-size: 0.875rem;
		color: var(--color-text-lighter);
		margin: 0;
	}

	/* Response Info */
	.response-info {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-lg);
	}

	.response-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-md);
		padding: var(--spacing-md);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-md);
	}

	.response-icon {
		font-size: 1.5rem;
	}

	.response-text h3 {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-xs);
	}

	.response-text p {
		font-size: 0.875rem;
		color: var(--color-text-light);
		margin: 0;
	}

	/* Availability */
	.availability-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}

	.availability-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-md);
		padding: var(--spacing-md);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-md);
		font-weight: 500;
		color: var(--color-text);
	}

	.availability-icon {
		font-size: 1.25rem;
	}

	/* Tools */
	.tools-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-lg);
	}

	.tool-category h3 {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-sm);
	}

	.tool-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-xs);
	}

	.tool-tag {
		background: var(--color-bg-secondary);
		color: var(--color-text);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-sm);
		font-size: 0.875rem;
		font-weight: 500;
		border: 1px solid var(--color-border);
	}

	/* Navigation */
	.page-navigation {
		display: flex;
		justify-content: flex-end;
		margin-top: var(--spacing-3xl);
		padding-top: var(--spacing-xl);
		border-top: 1px solid var(--color-border);
	}

	.nav-button {
		display: inline-flex;
		align-items: center;
		padding: var(--spacing-md) var(--spacing-xl);
		border-radius: var(--radius-lg);
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease;
	}

	.nav-button-primary {
		background: var(--color-primary);
		color: white;
	}

	.nav-button-primary:hover {
		background: var(--color-primary-dark);
		transform: translateX(4px);
	}

	.nav-button-secondary {
		background: var(--color-bg-secondary);
		color: var(--color-text-light);
		border: 1px solid var(--color-border);
	}

	.nav-button-secondary:hover {
		background: var(--color-border);
		transform: translateX(-4px);
	}

	@media (max-width: 768px) {
		.page-container {
			padding: var(--spacing-lg);
		}

		.page-title {
			font-size: 2rem;
		}

		.page-description {
			font-size: 1rem;
		}

		.contact-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-lg);
		}

		.contact-method {
			flex-direction: column;
			text-align: center;
		}

		.tools-grid {
			grid-template-columns: 1fr;
		}

		.page-navigation {
			flex-direction: column;
			gap: var(--spacing-md);
		}

		.nav-button {
			justify-content: center;
		}
	}
</style>