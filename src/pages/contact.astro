<style>
	.page-content {
		min-height: calc(100vh - 80px);
		display: flex;
		flex-direction: column;
	}

	.page-hero {
		background: var(--gradient-dark);
		padding: var(--spacing-4xl) 0;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.page-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 30% 70%, rgba(139, 124, 246, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 70% 30%, rgba(168, 85, 247, 0.08) 0%, transparent 50%);
		pointer-events: none;
	}

	.hero-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-xl);
		position: relative;
		z-index: 1;
	}

	.page-title {
		font-size: 3rem;
		font-weight: 700;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.page-subtitle {
		font-size: 1.25rem;
		color: var(--color-text-light);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.content-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--spacing-4xl) var(--spacing-xl);
		flex: 1;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-xl);
	}

	.contact-info-card {
		grid-column: 1 / -1;
	}

	.contact-info-card,
	.response-card,
	.availability-card,
	.tools-card {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		padding: var(--spacing-xl);
		box-shadow: var(--shadow-sm);
		transition: all 0.3s ease;
	}

	.contact-info-card:hover,
	.response-card:hover,
	.availability-card:hover,
	.tools-card:hover {
		box-shadow: var(--shadow-md);
		transform: translateY(-2px);
	}

	.card-title {
		font-size: 1.25rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		position: relative;
		padding-left: var(--spacing-md);
	}

	.card-title::before {
		content: '';
		position: absolute;
		left: 0;
		top: 50%;
		transform: translateY(-50%);
		width: 3px;
		height: 18px;
		background: var(--gradient-primary);
		border-radius: 2px;
	}

	/* Contact Methods */
	.contact-methods {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-xl);
	}

	.contact-method {
		display: flex;
		gap: var(--spacing-lg);
		padding: var(--spacing-lg);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-md);
		transition: all 0.3s ease;
	}

	.contact-method:hover {
		background: var(--color-bg-tertiary);
		transform: translateX(4px);
	}

	.contact-icon {
		width: 48px;
		height: 48px;
		border-radius: var(--radius-md);
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}

	.contact-icon svg {
		width: 24px;
		height: 24px;
	}

	.email-icon {
		background: var(--gradient-warm);
		color: white;
	}

	.github-icon {
		background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
		color: white;
	}

	.atcoder-icon {
		background: var(--gradient-accent);
		color: white;
	}

	.contact-details {
		flex: 1;
	}

	.contact-label {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-xs);
	}

	.contact-value {
		font-size: 1.125rem;
		color: var(--color-primary-solid);
		text-decoration: none;
		font-weight: 500;
		display: block;
		margin-bottom: var(--spacing-xs);
		transition: all 0.2s ease;
	}

	.contact-value:hover {
		color: var(--color-primary-dark);
		text-shadow: 0 0 8px rgba(139, 124, 246, 0.5);
	}

	.contact-note {
		font-size: 0.875rem;
		color: var(--color-text-lighter);
		margin: 0;
	}

	/* Response Info */
	.response-info {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-lg);
	}

	.response-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-md);
		padding: var(--spacing-md);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-md);
		transition: all 0.3s ease;
	}

	.response-item:hover {
		background: var(--color-bg-tertiary);
	}

	.response-icon {
		font-size: 1.5rem;
	}

	.response-text h3 {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-xs);
	}

	.response-text p {
		font-size: 0.875rem;
		color: var(--color-text-light);
		margin: 0;
	}

	/* Availability */
	.availability-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}

	.availability-item {
		display: flex;
		align-items: center;
		gap: var(--spacing-md);
		padding: var(--spacing-md);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-md);
		font-weight: 500;
		color: var(--color-text);
		transition: all 0.3s ease;
	}

	.availability-item:hover {
		background: var(--color-bg-tertiary);
		transform: translateX(4px);
	}

	.availability-icon {
		font-size: 1.25rem;
	}

	/* Tools */
	.tools-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: var(--spacing-lg);
	}

	.tool-category h3 {
		font-size: 1rem;
		font-weight: 600;
		color: var(--color-text);
		margin-bottom: var(--spacing-sm);
	}

	.tool-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-xs);
	}

	.tool-tag {
		background: var(--color-bg-secondary);
		color: var(--color-text);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-sm);
		font-size: 0.875rem;
		font-weight: 500;
		border: 1px solid var(--color-border);
		transition: all 0.3s ease;
	}

	.tool-tag:hover {
		background: var(--color-primary-solid);
		color: white;
		transform: translateY(-2px);
		box-shadow: var(--shadow-sm);
	}

	@media (max-width: 768px) {
		.hero-container {
			padding: 0 var(--spacing-lg);
		}

		.page-title {
			font-size: 2.25rem;
		}

		.page-subtitle {
			font-size: 1.125rem;
		}

		.content-container {
			padding: var(--spacing-3xl) var(--spacing-lg);
		}

		.contact-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-lg);
		}

		.contact-method {
			flex-direction: column;
			text-align: center;
		}

		.tools-grid {
			grid-template-columns: 1fr;
		}
	}
</style>