---
import Layout from '../layouts/Layout.astro';
import { loadPersonalData } from '../functions/dataLoader';

// Sections
import HeroSection from '../components/sections/HeroSection.astro';
import ResearchSection from '../components/sections/ResearchSection.astro';
import AwardsSection from '../components/sections/AwardsSection.astro';
import ExperienceSection from '../components/sections/ExperienceSection.astro';
import ProjectsSection from '../components/sections/ProjectsSection.astro';
import BackgroundSection from '../components/sections/BackgroundSection.astro';
import Footer from '../components/sections/Footer.astro';

const data = await loadPersonalData();
---

<Layout title="中野暁登 | Software Engineer & Researcher">
	<main class="main">
		<HeroSection profile={data.profile} />

		<div class="content">
			<ResearchSection research={data.research} />
			<AwardsSection awards={data.awards} />
			<ProjectsSection projects={data.projects} />
			<ExperienceSection jobHistory={data.jobHistory} laboratories={data.laboratories} />
			<BackgroundSection education={data.education} skills={data.skills} />
		</div>

		<Footer />
	</main>
</Layout>

<style>
	.main {
		max-width: 1000px;
		margin: 0 auto;
		padding: 0 var(--space-xl);
	}

	.content {
		padding-bottom: var(--space-4xl);
	}

	@media (max-width: 768px) {
		.main {
			padding: 0 var(--space-lg);
		}
	}
</style>
