---
import Layout from '../layouts/Layout.astro';
import Timeline from '../components/common/Timeline.astro';
import Tooltip from '../components/common/Tooltip.astro';
import {
	loadPersonalInfo,
	loadDevelopmentExperience,
	loadResearchHistory
} from '../functions/dataLoader';
import TechLogo from '../components/common/TechLogo.astro';
import { convertInternshipToTimeline, convertAwardsToTimeline } from '../utils/timelineHelpers';

const personalInfo = await loadPersonalInfo();
const developmentExp = await loadDevelopmentExperience();
const researchHistory = await loadResearchHistory();

// インターンシップをTimelineアイテムに変換
const internshipItems = convertInternshipToTimeline(personalInfo.internships || []);

// Awardsを新しい順にソートしてTimelineアイテムに変換
const awardItems = convertAwardsToTimeline(developmentExp.awards);
---

<Layout title="中野暁登 - Portfolio | Software Engineer & Researcher">
	<main class="top-page">
		<div class="two-column-container">
			<!-- Left Column -->
			<aside class="left-column">
				<div class="profile-card">
					<div class="profile-image-wrapper">
						<img src="/images/profile/icon.webp" alt={personalInfo.name} class="profile-image" />
					</div>
					<h1 class="profile-name">{personalInfo.name}</h1>
					<div class="profile-affiliation">
						<p>{personalInfo.affiliation.university}</p>
						<p>{personalInfo.affiliation.faculty}</p>
						<p>{personalInfo.year}</p>
					</div>
					<div class="profile-links">
						<Tooltip
							id="github"
							type="github"
							content={{ url: personalInfo.contact.github.url, text: "GitHub Profile" }}
						/>
						<Tooltip
							id="email"
							type="email"
							content={{ email: personalInfo.contact.email }}
						/>
						{personalInfo.contact.atcoder && (
							<Tooltip
								id="atcoder"
								type="atcoder"
								content={{ url: personalInfo.contact.atcoder, text: "AtCoder Profile" }}
							/>
						)}
					</div>

					<!-- Education Section -->
					{personalInfo.education && personalInfo.education.length > 0 && (
						<div class="education-section">
							<h2 class="education-title">Education</h2>
							<div class="education-list">
								{personalInfo.education.map((edu) => {
									const parts = edu.institution.split('大学');
									const university = parts[0] + '大学';
									const detail = parts[1] || '';
									return (
										<div class="education-item">
											<p class="education-period">{edu.period}</p>
											<p class="education-institution">
												<span class="university-name">{university}</span>
												{detail && <span class="university-detail">{detail}</span>}
											</p>
										</div>
									);
								})}
							</div>
						</div>
					)}
				</div>
			</aside>

			<!-- Right Column -->
			<div class="right-column">
				<!-- Research Papers Section -->
				<section class="content-section">
					<div class="section-header">
						<h2 class="section-title">Research</h2>
					</div>
					<div class="papers-list">
						{researchHistory.papers.map((paper) => (
							paper.siteUrl ? (
								<a href={paper.siteUrl} target="_blank" rel="noopener noreferrer" class="paper-item paper-link">
									<p class="paper-title">
										{paper.title}
										<img src="/images/about/external-link.svg" alt="External link" class="external-link-icon" />
									</p>
									<div class="paper-meta">
										<span class="paper-conference">{paper.conference}</span>
										{paper.note && <span class="paper-note">{paper.note}</span>}
									</div>
								</a>
							) : (
								<div class="paper-item">
									<p class="paper-title">{paper.title}</p>
									<div class="paper-meta">
										<span class="paper-conference">{paper.conference}</span>
										{paper.note && <span class="paper-note">{paper.note}</span>}
									</div>
								</div>
							)
						))}
					</div>
				</section>

				<!-- Internship Section -->
				{internshipItems.length > 0 && (
					<section class="content-section">
						<div class="section-header">
							<h2 class="section-title">Internship</h2>
						</div>
						<Timeline items={internshipItems} markerColor="primary" />
					</section>
				)}

				<!-- Awards Section -->
				<section class="content-section">
					<div class="section-header">
						<h2 class="section-title">Development</h2>
					</div>
					<Timeline items={awardItems} markerColor="primary" />
				</section>
			</div>
		</div>
	</main>
</Layout>

<style>
	.top-page {
		width: 100%;
		height: 100%;
		overflow: hidden;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	/* ===== TWO COLUMN LAYOUT ===== */
	.two-column-container {
		max-width: 1400px;
		margin: 0 auto;
		padding: var(--spacing-5xl) var(--spacing-xl);
		display: grid;
		grid-template-columns: 300px 1fr;
		gap: var(--spacing-5xl);
		height: 100%;
		box-sizing: border-box;
		overflow: hidden;
	}

	/* ===== LEFT COLUMN (PROFILE) ===== */
	.left-column {
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.profile-card {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-2xl);
		padding: var(--spacing-3xl);
		text-align: center;
		position: relative;
		z-index: 1;
	}

	.profile-image-wrapper {
		width: 150px;
		height: 150px;
		margin: 0 auto var(--spacing-2xl);
		border-radius: 50%;
		overflow: hidden;
		border: 3px solid var(--color-border);
		box-shadow: var(--shadow-md);
	}

	.profile-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.profile-name {
		font-size: var(--font-size-2xl);
		font-weight: var(--font-weight-bold);
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
	}

	.profile-affiliation {
		font-size: var(--font-size-sm);
		color: var(--color-text-light);
		line-height: 1.6;
		margin-bottom: var(--spacing-2xl);
	}

	.profile-affiliation p {
		margin-bottom: var(--spacing-xs);
	}

	.profile-links {
		display: flex;
		justify-content: center;
		gap: var(--spacing-md);
		padding-bottom: var(--spacing-xl);
		margin-bottom: var(--spacing-xl);
		border-bottom: 1px solid var(--color-border);
	}

	/* ===== EDUCATION SECTION ===== */
	.education-section {
		text-align: left;
	}

	.education-title {
		font-size: var(--font-size-base);
		font-weight: var(--font-weight-bold);
		color: var(--color-text);
		margin-bottom: var(--spacing-md);
	}

	.education-list {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-md);
	}

	.education-item {
		padding: var(--spacing-sm);
	}

	.education-period {
		font-size: var(--font-size-xs);
		color: var(--color-text-lighter);
		margin-bottom: var(--spacing-xs);
	}

	.education-institution {
		line-height: 1.5;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-xs);
	}

	.university-name {
		font-size: var(--font-size-base);
		font-weight: var(--font-weight-semibold);
		color: var(--color-text);
	}

	.university-detail {
		font-size: var(--font-size-xs);
		color: var(--color-text-light);
	}

	/* ===== RIGHT COLUMN (CONTENT) ===== */
	.right-column {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-4xl);
		height: 100%;
		overflow-y: auto;
		padding-right: var(--spacing-md);
		padding-bottom: var(--spacing-5xl);
	}

	.right-column::-webkit-scrollbar {
		width: 8px;
	}

	.right-column::-webkit-scrollbar-track {
		background: var(--color-bg-secondary);
		border-radius: var(--radius-full);
	}

	.right-column::-webkit-scrollbar-thumb {
		background: var(--color-border);
		border-radius: var(--radius-full);
	}

	.right-column::-webkit-scrollbar-thumb:hover {
		background: var(--color-primary-solid);
	}

	.content-section {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-2xl);
		padding: var(--spacing-3xl);
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: var(--spacing-2xl);
		padding-bottom: var(--spacing-lg);
		border-bottom: 2px solid var(--color-border);
	}

	.section-title {
		font-size: var(--font-size-2xl);
		font-weight: var(--font-weight-bold);
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.section-link {
		font-size: var(--font-size-sm);
		color: var(--color-secondary-solid);
		font-weight: var(--font-weight-semibold);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.section-link:hover {
		color: var(--color-primary-solid);
	}

	/* ===== RESEARCH PAPERS ===== */
	.papers-list {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-lg);
	}

	.paper-item {
		padding: var(--spacing-xl);
		background: var(--color-bg-secondary);
		border-radius: var(--radius-lg);
		border-left: 3px solid var(--color-primary-solid);
	}

	.paper-link {
		display: block;
		text-decoration: none;
		color: inherit;
		transition: all 0.3s ease;
	}

	.paper-link:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
		border-left-color: var(--color-secondary-solid);
	}

	.paper-title {
		font-size: var(--font-size-base);
		font-weight: var(--font-weight-semibold);
		color: var(--color-text);
		margin-bottom: var(--spacing-sm);
		line-height: 1.6;
		display: flex;
		align-items: center;
		gap: var(--spacing-sm);
	}

	.external-link-icon {
		width: 14px;
		height: 14px;
		opacity: 0.6;
		transition: opacity 0.3s ease;
		flex-shrink: 0;
	}

	.paper-link:hover .external-link-icon {
		opacity: 1;
	}

	.paper-meta {
		display: flex;
		gap: var(--spacing-md);
		align-items: center;
		flex-wrap: wrap;
	}

	.paper-conference {
		font-size: var(--font-size-sm);
		color: var(--color-text-lighter);
	}

	.paper-note {
		background: var(--gradient-accent);
		color: #ffffff;
		padding: var(--spacing-xs) var(--spacing-md);
		border-radius: var(--radius-md);
		font-size: var(--font-size-xs);
		font-weight: var(--font-weight-semibold);
	}

	/* ===== RESPONSIVE DESIGN ===== */
	@media (max-width: 1024px) {
		.top-page {
			/* デスクトップと同じスクロール戦略を維持 */
			height: 100%;
			overflow-y: auto;
			flex: 1;
			padding: var(--spacing-5xl) 0;
			box-sizing: border-box;
		}

		.two-column-container {
			grid-template-columns: 1fr;
			gap: var(--spacing-4xl);
			height: auto;
			min-height: 100%;
			overflow: visible;
			padding: 0 var(--spacing-xl);
		}

		.left-column {
			height: auto;
		}

		.right-column {
			height: auto;
			overflow-y: visible;
			padding-right: 0;
		}
	}

	@media (max-width: 768px) {
		.top-page {
			padding: var(--spacing-4xl) 0;
		}

		.two-column-container {
			padding: 0 var(--spacing-lg);
		}

		.profile-card {
			padding: var(--spacing-2xl);
		}

		.profile-image-wrapper {
			width: 120px;
			height: 120px;
		}

		.content-section {
			padding: var(--spacing-2xl);
		}

		.section-title {
			font-size: var(--font-size-xl);
		}

		.award-header {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
