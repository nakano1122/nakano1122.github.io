---
import Layout from '../layouts/Layout.astro';
import ResearchHistory from '../components/ResearchHistory.astro';
---

<Layout title="研究歴 - 中野暁登 Portfolio">
	<div class="page-content">
		<section class="page-hero">
			<div class="hero-container">
				<h1 class="page-title">研究歴</h1>
			</div>
		</section>

		<main class="content-container">
			<ResearchHistory />
		</main>
	</div>
</Layout>

<style>
	.page-content {
		min-height: calc(100vh - 80px);
		display: flex;
		flex-direction: column;
	}

	.page-hero {
		background: var(--gradient-dark);
		padding: var(--spacing-4xl) 0;
		text-align: center;
		position: relative;
		overflow: hidden;
	}

	.page-hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: 
			radial-gradient(circle at 30% 70%, rgba(139, 124, 246, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 70% 30%, rgba(168, 85, 247, 0.08) 0%, transparent 50%);
		pointer-events: none;
	}

	.hero-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-xl);
		position: relative;
		z-index: 1;
	}

	.page-title {
		font-size: 3rem;
		font-weight: 700;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.page-subtitle {
		font-size: 1.25rem;
		color: var(--color-text-light);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.content-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--spacing-4xl) var(--spacing-xl);
		flex: 1;
	}

	@media (max-width: 768px) {
		.hero-container {
			padding: 0 var(--spacing-lg);
		}

		.page-title {
			font-size: 2.25rem;
		}

		.page-subtitle {
			font-size: 1.125rem;
		}

		.content-container {
			padding: var(--spacing-3xl) var(--spacing-lg);
		}
	}
</style>