---
import Layout from '../layouts/Layout.astro';
import { loadDevelopmentExperience } from '../functions/dataLoader';
import TechLogo from '../components/common/TechLogo.astro';

const developmentExp = await loadDevelopmentExperience();

---

<Layout title="アプリ開発経験 - 中野暁登 Portfolio">
	<div class="page-container">
		<header class="page-header">
			<h1 class="page-title">アプリ開発経験</h1>
			<a href="/" class="back-link">← ポートフォリオに戻る</a>
		</header>

		<main class="page-content">
			<!-- 技術系イベント受賞歴 -->
			<section class="section">
				<h2 class="section-title">技術系イベント受賞歴</h2>
				<div class="events-grid">
					{developmentExp.events.map((event) => (
						<div class="event-card">
							<div class="event-header">
								<h3 class="event-name">{event.name}</h3>
								<span class="event-date">{event.date.year}年{event.date.month}月</span>
							</div>
							<p class="event-award">{event.award}</p>
						</div>
					))}
				</div>
			</section>

			<!-- 技術スタック -->
			<section class="section">
				<h2 class="section-title">技術スタック</h2>
				{Object.entries(developmentExp.techStack).filter(([category, techs]) => techs.length > 0).map(([category, techs]) => (
					<div class="tech-category">
						<h3 class="category-title">{category}</h3>
						<div class="tech-grid">
							{techs.map((tech: string) => (
								<TechLogo tech={tech} size="md" />
							))}
						</div>
					</div>
				))}
			</section>

			<!-- 個人開発プロジェクト -->
			{developmentExp.projects.length > 0 && (
				<section class="section">
					<h2 class="section-title">個人開発プロジェクト</h2>
					<div class="projects-list">
						{developmentExp.projects.map((project) => (
							<div class="project-item">
								<h3 class="project-title">{project.title}</h3>
							</div>
						))}
					</div>
				</section>
			)}
		</main>
	</div>
</Layout>

<style>
	.page-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-xl);
		min-height: 100vh;
	}

	.page-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: var(--spacing-3xl) 0;
		border-bottom: 1px solid var(--color-border);
	}

	.page-title {
		font-size: var(--font-size-4xl);
		font-weight: var(--font-weight-bold);
		background: var(--gradient-primary);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.back-link {
		color: var(--color-text-light);
		text-decoration: none;
		transition: color 0.3s ease;
	}

	.back-link:hover {
		color: var(--color-secondary-solid);
	}

	.page-content {
		padding: var(--spacing-3xl) 0;
	}

	.section {
		margin-bottom: var(--spacing-5xl);
	}

	.section-title {
		font-size: var(--font-size-2xl);
		font-weight: var(--font-weight-bold);
		color: var(--color-text);
		margin-bottom: var(--spacing-xl);
		border-left: 4px solid var(--color-secondary-solid);
		padding-left: var(--spacing-md);
	}

	.events-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: var(--spacing-xl);
	}

	.event-card {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		padding: var(--spacing-xl);
		transition: all 0.3s ease;
	}

	.event-card:hover {
		transform: translateY(-2px);
		border-color: var(--color-secondary-solid);
		box-shadow: var(--shadow-lg);
	}

	.event-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: var(--spacing-md);
	}

	.event-name {
		font-size: var(--font-size-lg);
		font-weight: var(--font-weight-semibold);
		color: var(--color-text);
		flex: 1;
		margin-right: var(--spacing-md);
	}

	.event-date {
		font-size: var(--font-size-sm);
		color: var(--color-text-light);
		background: var(--color-bg-tertiary);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-sm);
		white-space: nowrap;
	}

	.event-award {
		font-size: var(--font-size-base);
		font-weight: var(--font-weight-medium);
		color: var(--color-text-accent);
	}

	.tech-category {
		margin-bottom: var(--spacing-2xl);
	}

	.category-title {
		font-size: var(--font-size-lg);
		font-weight: var(--font-weight-semibold);
		color: var(--color-text-light);
		margin-bottom: var(--spacing-md);
	}

	.tech-grid {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-md);
	}

	.projects-list {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: var(--spacing-lg);
	}

	.project-item {
		background: var(--color-bg-card);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
		padding: var(--spacing-lg);
		transition: all 0.3s ease;
	}

	.project-item:hover {
		transform: translateY(-2px);
		border-color: var(--color-secondary-solid);
		box-shadow: var(--shadow-lg);
	}

	.project-title {
		font-size: var(--font-size-lg);
		font-weight: var(--font-weight-semibold);
		color: var(--color-text);
	}

	@media (max-width: 768px) {
		.page-container {
			padding: 0 var(--spacing-lg);
		}

		.page-header {
			flex-direction: column;
			gap: var(--spacing-md);
			align-items: flex-start;
		}

		.page-title {
			font-size: var(--font-size-3xl);
		}

		.events-grid {
			grid-template-columns: 1fr;
		}

		.tech-grid {
			grid-template-columns: 1fr;
		}

		.projects-list {
			grid-template-columns: 1fr;
		}
	}
</style>