---
import Layout from '../layouts/Layout.astro';
import InternshipHistory from '../components/InternshipHistory.astro';
---

<Layout title="インターン歴 - 中野太郎 Portfolio">
	<main class="page-container">
		<header class="page-header">
			<h1 class="page-title">Internship Experience</h1>
			<p class="page-description">
				多様な技術領域での実務経験をご紹介します。
				バックエンド、機械学習、フロントエンドでの実践的な開発経験の詳細をご覧いただけます。
			</p>
		</header>

		<InternshipHistory />
		
		<nav class="page-navigation">
			<a href="/contact" class="nav-button nav-button-primary">お問い合わせ →</a>
		</nav>
	</main>
</Layout>

<style>
	.page-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--spacing-xl);
		min-height: 100vh;
	}


	.page-header {
		margin-bottom: var(--spacing-3xl);
		text-align: center;
	}

	.page-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--color-text);
		margin-bottom: var(--spacing-lg);
		position: relative;
	}

	.page-title::after {
		content: '';
		position: absolute;
		bottom: -8px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 4px;
		background: var(--color-primary);
		border-radius: 2px;
	}

	.page-description {
		font-size: 1.125rem;
		color: var(--color-text-light);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.page-navigation {
		display: flex;
		justify-content: flex-end;
		margin-top: var(--spacing-3xl);
		padding-top: var(--spacing-xl);
		border-top: 1px solid var(--color-border);
	}

	.nav-button {
		display: inline-flex;
		align-items: center;
		padding: var(--spacing-md) var(--spacing-xl);
		border-radius: var(--radius-lg);
		text-decoration: none;
		font-weight: 500;
		transition: all 0.2s ease;
	}

	.nav-button-primary {
		background: var(--color-primary);
		color: white;
	}

	.nav-button-primary:hover {
		background: var(--color-primary-dark);
		transform: translateX(4px);
	}

	.nav-button-secondary {
		background: var(--color-bg-secondary);
		color: var(--color-text-light);
		border: 1px solid var(--color-border);
	}

	.nav-button-secondary:hover {
		background: var(--color-border);
		transform: translateX(-4px);
	}

	@media (max-width: 768px) {
		.page-container {
			padding: var(--spacing-lg);
		}

		.page-title {
			font-size: 2rem;
		}

		.page-description {
			font-size: 1rem;
		}

		.page-navigation {
			flex-direction: column;
			gap: var(--spacing-md);
		}

		.nav-button {
			justify-content: center;
		}
	}
</style>